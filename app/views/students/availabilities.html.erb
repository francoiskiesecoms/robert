<div class="page_container">
  <div class="flex">
    <div class="show">
      <ul>
        <%Student.find_by(user:current_user).availabilities.each do |availability| %>
          <li><%= availability.start_date %></li>
        <%end%>
      </ul>
    </div>

    <div class="set_availability">
      <%= form_for @availability do |f| %>
                <!-- [...] -->

        <div class="form-group">
          <%= f.label :start_date %>
          <%= f.text_field :start_date, :data => {:provide => "datepicker"} , class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :end_date %>
          <%= f.text_field :end_date, :data => {:provide => "datepicker"}, class: 'form-control'  %>
        </div>
          <%= f.submit "Add availibility", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
