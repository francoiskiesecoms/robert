<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat)header"><h4>... </h4></div>
      <div class="messages">
        <% unless @student.chat_rooms == [] %>
          <% @student.chat_rooms.last.messages.each do |message| %>
          <%= render "messages/message", message: message %>
          <%end%>
        <%end%>
      </div>
      <div id="create-message">
        <%= simple_form_for [@student.chat_rooms.last, Message.new], remote: true do |f| %>
        <%= f.input :content, label: false %>
        <%= f.button :submit%>
        <%end%>
      </div>
    </div>
  </div>
</div>


